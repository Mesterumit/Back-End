{%- include('../partials/header') %}


<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card card-body shadow">
                <h3 class="text-center mb-3">Login</h3>
                <form action="/auth/login" method="POST">
                    <input type="text" placeholder="Email" name="email" class="form-control mb-4">
                    <input type="password" placeholder="Password ****" name="password" class="form-control mb-4">
                    <label><input type="checkbox" name="rememberMe" class="form-check-input ml-2"> Remember Me</label>
                    
                    <div class="text-center">
                        <button class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>