{%- include('../partials/header') %}


<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card card-body shadow">
                <h3 class="text-center mb-3">Register</h3>
                <form action="/auth/register" method="POST">
                    <input type="text" placeholder="Name" name="name" class="form-control mb-3">
                    <input type="text" placeholder="Email" name="email" class="form-control mb-3">
                    <input type="password" placeholder="Password ***** " name="password" class="form-control mb-3">
                    <input type="password" placeholder="Confirm Password " name="password2" class="form-control mb-3">
                 
                    <div class="text-center">
                        <button class="btn btn-primary">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>